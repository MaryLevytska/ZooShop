<UserControl x:Class="ZooShopApp.MVVM.View.AnimalDetailsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ZooShopApp.MVVM.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel>
            <TextBlock Text="Information about animal"  
                  Foreground="Black"
                  FontSize="28"
                  HorizontalAlignment="Left"
                  Margin="0,0,0,0"/>

        </StackPanel>
        <StackPanel Orientation="Horizontal"
                    VerticalAlignment="Top"
                    Margin="10,50,0,0">
            <TextBlock
                            Width="70"
                            Height="30"
                FontSize="18"
                            Foreground="Black"
                            Background="AliceBlue"
                            Text="Breed: "
                              FontWeight="Bold"/>
            <TextBlock
                            Width="300"
                            Height="30"
                                FontSize="18"

                            Foreground="Black"
                            Background="AliceBlue"
                            Text="{Binding Data.Breed}"
                              FontWeight="Bold"/>
        </StackPanel>


        <StackPanel Orientation="Horizontal"
                    VerticalAlignment="Top"
                    Margin="10,80,0,0">
            <TextBlock
                            Width="70"
                            Height="30"
                                FontSize="18"

                            Foreground="Black"
                            Background="AliceBlue"
                            Text="Age: "
                              FontWeight="Bold"/>
            <TextBlock
                            Width="300"
                            Height="30"
                                FontSize="18"

                            Foreground="Black"
                            Background="AliceBlue"
                            Text="{Binding Data.Age}"
                              FontWeight="Bold"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" 
                    VerticalAlignment="Top"
                    Margin="10,110,0,0">
            <TextBlock
                            Width="70"
                            Height="30"
                                FontSize="18"

                            Foreground="Black"
                            Background="AliceBlue"
                            Text="Cover: "
                              FontWeight="Bold"/>
            <TextBlock
                            Width="300"
                            Height="30"
                                FontSize="18"

                            Foreground="Black"
                            Background="AliceBlue"
                            Text="{Binding Data.Cover}"
                              FontWeight="Bold"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" 
                    VerticalAlignment="Top"
                    Margin="10,140,0,0">
            <TextBlock
                            Width="300"
                            Height="30"
                                FontSize="18"

                            Foreground="Black"
                            Background="AliceBlue"
                            Text="{Binding Data.Height,StringFormat=Height: {0:C}}"
                              FontWeight="Bold"/>
        </StackPanel>


        <StackPanel Orientation="Horizontal" 
                    VerticalAlignment="Top"
                    Margin="10,170,0,0">
            <TextBlock
                            Width="70"
                            Height="30"
                                FontSize="18"

                            Foreground="Black"
                            Background="AliceBlue"
                            Text="Weight: "
                              FontWeight="Bold"/>
            <TextBlock
                            Width="300"
                            Height="30"
                                FontSize="18"

                            Foreground="Black"
                            Background="AliceBlue"
                            Text="{Binding Data.Weight}"
                              FontWeight="Bold"/>
        </StackPanel>


        <StackPanel Orientation="Horizontal" 
                    VerticalAlignment="Top"
                    Margin="10,200,0,0">
            <TextBlock
                            Width="110"
                            Height="30"
                                FontSize="18"

                            Foreground="Black"
                            Background="AliceBlue"
                            Text="BloodTypes: "
                              FontWeight="Bold"/>
            <TextBlock
                            Width="300"
                            Height="30"
                                FontSize="18"

                            Foreground="Black"
                            Background="AliceBlue"
                            Text="{Binding Data.BloodTypes}"
                              FontWeight="Bold"/>
        </StackPanel>


        <StackPanel Orientation="Horizontal" 
                    VerticalAlignment="Top"
                    Margin="10,230,0,0">
            <TextBlock
                            Width="50"
                            Height="30"
                                FontSize="18"

                            Foreground="Black"
                            Background="AliceBlue"
                            Text="Price: "
                              FontWeight="Bold"/>
            <TextBlock
                            Width="300"
                            Height="30"
                                FontSize="18"

                            Foreground="Black"
                            Background="AliceBlue"
                            Text="{Binding Data.Price}"
                            FontWeight="Bold"/>
        </StackPanel>
        <Button  Command="{Binding DiscoveryCommand}"
                                Background="Transparent"
                                BorderBrush="Transparent"
                                 Width="250"
                                 Height="250"
                                   HorizontalAlignment="Right"
                 VerticalAlignment="Top"

                                 Margin="0,10,188,0">
            <Button.Style>
                <Style TargetType="Button">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="Button">
                                <Border Background="Transparent" BorderThickness="0">
                                    <Border CornerRadius="10" BorderThickness="0" ClipToBounds="True">
                                        <Rectangle RadiusX="10" RadiusY="10">
                                            <Rectangle.Fill>
                                                <ImageBrush ImageSource="{Binding Data.Img}" Stretch="Fill"/>
                                            </Rectangle.Fill>
                                        </Rectangle>
                                    </Border>
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                    <Setter Property="OverridesDefaultStyle" Value="True"/>
                    <Setter Property="BorderBrush" Value="Transparent"/>
                    <Setter Property="Background" Value="Transparent"/>
                </Style>
            </Button.Style>
        </Button>

        <Button  Command="{Binding AddAnimalToCartById}"
                 CommandParameter="{Binding Data.Id}"
                                Background="Transparent"
                                BorderBrush="Transparent"
                                 Width="50"
                                 Height="50"
                                   HorizontalAlignment="Center"
                 VerticalAlignment="Top"

                                 Margin="0,285,0,0">
            <Button.Style>
                <Style TargetType="Button">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="Button">
                                <Border Background="Transparent" BorderThickness="0">
                                    <Border CornerRadius="10" BorderThickness="0" ClipToBounds="True">
                                        <Rectangle RadiusX="10" RadiusY="10">
                                            <Rectangle.Fill>
                                                <ImageBrush ImageSource="/Images/ok.jpg" Stretch="Fill"/>
                                            </Rectangle.Fill>
                                        </Rectangle>
                                    </Border>
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                    <Setter Property="OverridesDefaultStyle" Value="True"/>
                    <Setter Property="BorderBrush" Value="Transparent"/>
                    <Setter Property="Background" Value="Transparent"/>
                </Style>
            </Button.Style>
        </Button>

        <Button  Command="{Binding RemoveCommand}"
                                Background="Transparent"
                                BorderBrush="Transparent"
                                 Width="50"
                                 Height="50"
                                   HorizontalAlignment="Right"
                 VerticalAlignment="Top"

                                 Margin="0,285,150,0">
            <Button.Style>
                <Style TargetType="Button">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="Button">
                                <Border Background="Transparent" BorderThickness="0">
                                    <Border CornerRadius="10" BorderThickness="0" ClipToBounds="True">
                                        <Rectangle RadiusX="10" RadiusY="10">
                                            <Rectangle.Fill>
                                                <ImageBrush ImageSource="/Images/notOk.jpg" Stretch="Fill"/>
                                            </Rectangle.Fill>
                                        </Rectangle>
                                    </Border>
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                    <Setter Property="OverridesDefaultStyle" Value="True"/>
                    <Setter Property="BorderBrush" Value="Transparent"/>
                    <Setter Property="Background" Value="Transparent"/>
                </Style>
            </Button.Style>
        </Button>


    </Grid>
</UserControl>
